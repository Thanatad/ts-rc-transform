{
  "name": "rc-transforms",
  "version": "1.0.2",
  "description": "A transformation layer that sits between orm and json responses",
  "repository": "https://github.com/Thanatad/ts-rc-transforms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json -w",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage --coverageDirectory='coverage'",
    "test:coveralls": "npx jest --coverage && coveralls < coverage/lcov.info"
  },
  "keywords": [
    "laravel resources api",
    "resources",
    "laravel collection",
    "transformer"
  ],
  "author": "Thanatad B.",
  "license": "MIT",
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7"
  }
}
